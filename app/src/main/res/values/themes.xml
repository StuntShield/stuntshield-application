<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StuntShield" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary_color</item>
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="basicText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="basicText.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="googleButton">
        <item name="android:text">Masuk dengan Google</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">21dp</item>
        <item name="iconPadding">12dp</item>
    </style>


</resources>