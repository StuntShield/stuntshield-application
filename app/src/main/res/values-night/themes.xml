<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StuntShield" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
    </style>

    <style name="basicText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="basicText.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="googleButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:text">Masuk dengan Google</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">21dp</item>
        <item name="iconPadding">12dp</item>
    </style>

    <!-- inactive tab icon style -->
    <style name="TextAppearance_BottomNavigationView_Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance_BottomNavigationView_Active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputEditText">
        <item name="android:text">-</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="InputEditText.Age">
        <item name="android:inputType">number</item>
    </style>

    <style name="InputEditText.WeightHeight">
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>